<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeActivity">

    <zhanglei.com.paintview.PaintView
        android:id="@+id/paintView"
        android:layout_width="409dp"
        android:layout_height="732dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFFAE4"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="62dp"
        android:layout_height="43dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:textColor="#207178"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pause" />

    <TextView
        android:id="@+id/title"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:text="关卡信息"
        android:gravity="center"
        android:textColor="#F58653"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/back"
        android:layout_width="71dp"
        android:layout_height="45dp"
        android:background="@drawable/buttonshape2"
        android:text="返回"
        android:textColor="#F58653"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/pause"
        android:layout_width="71dp"
        android:layout_height="45dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/buttonshape2"
        android:text="暂停"
        android:textColor="#F58653"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="57dp"
        android:layout_height="213dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:layout_constraintVertical_bias="0.072">


        <Button
            android:id="@+id/btn_select_paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape2"
            android:text="画笔"
            android:textColor="#F58653" />

        <Button
            android:id="@+id/btn_select_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape2"
            android:text="颜色"
            android:textColor="#F58653" />

        <Button
            android:id="@+id/btn_select_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape2"
            android:text="橡皮"
            android:textColor="#F58653" />

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/buttonshape2"
            android:text="清空画板"

            android:textColor="#F58653" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_undo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:padding="5dp"
        android:src="@mipmap/icon_undo"
        app:layout_constraintBottom_toTopOf="@+id/resultmsg"
        app:layout_constraintEnd_toStartOf="@+id/iv_redo" />

    <ImageView
        android:id="@+id/iv_redo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@mipmap/icon_redo"
        app:layout_constraintBottom_toTopOf="@+id/resultmsg"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/resultmsg"
        android:layout_width="411dp"
        android:layout_height="75dp"
        android:layout_marginTop="563dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/buttonshape2"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="你画的是... "
        android:textColor="#F58653"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.38" />

    <Button
        android:id="@+id/game_start"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:background="@drawable/buttonshape2"
        android:text="开始游戏"
        android:textColor="#F58653"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/resultmsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/hint"
        android:layout_width="62dp"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:text="提示"
        android:textColor="#F58653"
        android:background="@drawable/buttonshape2"
        app:layout_constraintBottom_toBottomOf="@+id/paintView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chronometer"
        app:layout_constraintVertical_bias="0.033" />

</androidx.constraintlayout.widget.ConstraintLayout>