<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popwindow_toolmore_bg"
    >
    <ImageView
        android:id="@+id/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_toobar_select_bg"
        android:scaleType="center"
        android:src="@mipmap/toolbar_black" />

    <ImageView
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_toobar_unselect_bg"
        android:scaleType="center"
        android:src="@mipmap/toolbar_red" />

    <ImageView
        android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_toobar_unselect_bg"
        android:scaleType="center"
        android:src="@mipmap/toolbar_yellow" />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_toobar_unselect_bg"
        android:scaleType="center"
        android:src="@mipmap/toolbar_blue" />



</LinearLayout>
